<% content_for(:title, t('.title')) %>

<div class="flex items-center min-h-screen">
  <div class="container mx-auto">
    <div class="max-w-md mx-auto">
      <div class="text-center">
        <h1 class="text-3xl font-semibold text-gray-700 dark:text-gray-200"><%= t('.title') %></h1>
      </div>
      <div class="m-7">
        <%= form_with model: @contact, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          <div class="mb-4">
            <%= f.label :name, class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
            <%= f.text_field :name, placeholder: "名前", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-yellow-100 focus:border-yellow-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
          </div>
          <div class="mb-4">
            <%= f.label :email, class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
            <%= f.email_field :email, placeholder: "メールアドレス", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-yellow-100 focus:border-yellow-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
          </div>
          <div class="mb-4">
            <%= f.label :content, class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
            <%= f.text_area :content, rows: 5, placeholder: "お問い合わせ内容をご記入ください", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-yellow-100 focus:border-yellow-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
          </div>
          <div class="mb-6">
            <%= f.submit '送信', class: "w-full p-2 lg:p-2 text-white text-lg lg:text-xl bg-yellow-500 rounded-md focus:bg-yellow-600 focus:outline-none" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
